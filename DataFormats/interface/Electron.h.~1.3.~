#ifndef Analysis_StandardTools_Electron_H
#define Analysis_StandardTools_Electron_H

/** \class Electron
 *  No description available.
 *
 *  $Date: 2013/03/15 13:37:31 $
 *  $Revision: 1.3 $
 *  \author R. Bellan - UCSB <riccardo.bellan@cern.ch>
 */

#include "Lepton.h"

namespace phys {

  class Electron: public Lepton {

  public:
   
    /// Constructor
    Electron(const TLorentzVector& p = TLorentzVector(0.,0.,0.,0.), int q =0)
      : Lepton(p,q)
      , fMVAVar_fbrem(-9999.)
      , fMVAVar_kfchi2(-9999.)
      , fMVAVar_kfhits(-9999.)
      , fMVAVar_gsfchi2(-9999.)
      , fMVAVar_deta(-9999.)
      , fMVAVar_dphi(-9999.)
      , fMVAVar_detacalo(-9999.)
      , fMVAVar_see(-9999.)     
      , fMVAVar_etawidth(-9999.)
      , fMVAVar_phiwidth(-9999.)
      , fMVAVar_e1x5e5x5(-9999.)
      , fMVAVar_HoE(-9999.)     
      , fMVAVar_EoP(-9999.)     
      , fMVAVar_IoEmIoP(-9999.) 
      , fMVAVar_eleEoPout(-9999.)
      , fMVAVar_PreShowerOverRaw(-9999.)
      {}
    
      Electron(const Lepton& lep)
	: Lepton(lep)
	, fMVAVar_fbrem(-9999.)
	, fMVAVar_kfchi2(-9999.)
	, fMVAVar_kfhits(-9999.)
	, fMVAVar_gsfchi2(-9999.)
	, fMVAVar_deta(-9999.)
	, fMVAVar_dphi(-9999.)
	, fMVAVar_detacalo(-9999.)
	, fMVAVar_see(-9999.)     
	, fMVAVar_etawidth(-9999.)
	, fMVAVar_phiwidth(-9999.)
	, fMVAVar_e1x5e5x5(-9999.)
	, fMVAVar_HoE(-9999.)     
	, fMVAVar_EoP(-9999.)     
	, fMVAVar_IoEmIoP(-9999.) 
	, fMVAVar_eleEoPout(-9999.)
	, fMVAVar_PreShowerOverRaw(-9999.)
	{}
    


    /// Destructor
    virtual ~Electron(){};
    
    // Operations
    
  protected:
    
  public:
    
    Double_t fMVAVar_fbrem;
    Double_t fMVAVar_kfchi2;
    Double_t fMVAVar_kfhits;
    Double_t fMVAVar_gsfchi2;
    Double_t fMVAVar_deta;
    Double_t fMVAVar_dphi;
    Double_t fMVAVar_detacalo;
    Double_t fMVAVar_see;     
    Double_t fMVAVar_etawidth;
    Double_t fMVAVar_phiwidth;
    Double_t fMVAVar_e1x5e5x5;
    Double_t fMVAVar_HoE;     
    Double_t fMVAVar_EoP;     
    Double_t fMVAVar_IoEmIoP; 
    Double_t fMVAVar_eleEoPout;
    Double_t fMVAVar_PreShowerOverRaw;
    
    ClassDef(Electron, 1) //
  };
}

#endif

